@page "/"
@using ZaposliMe.Frontend.Components.Pages.Helpers
@using ZaposliMe.Frontend.Components.Pages.Job
@inject NavigationManager Nav

<AuthorizeView Context="ctx">
    <Authorized>
        @if (ctx.User.IsInRole("Employer"))
        {
            Nav.NavigateTo("/employer/jobs", true);
        }
        else if (ctx.User.IsInRole("Admin") || ctx.User.IsInRole("Employee"))
        {
            Nav.NavigateTo("/jobs", true);
        }
        else
        {
            // Authenticated but has none of the roles → show landing or some message
            <LandingPage />
        }
    </Authorized>
    <NotAuthorized>
        <LandingPage />
    </NotAuthorized>
</AuthorizeView>

<PageTitle>Welcome to Job Marketplace</PageTitle>
