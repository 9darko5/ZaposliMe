@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using ZaposliMe.Frontend.Components.Shared
@inject IStringLocalizer<ZaposliMe.Frontend.Resources.Resources> L

<div class="container py-5">

    <!-- Hero -->
    <section class="p-5 mb-5 bg-light rounded-4 border">
        <div class="container-fluid">
            <h1 class="display-5 fw-bold mb-3">@L["FindWorkHireWorker"]</h1>
            <p class="col-md-9 fs-5 mb-4">
                @L["JoinOurMarketplace"]<br />
                @L["WorkersBrowseEmployersPostRoles"]<br />
                @L["GettingStartedTakesAMinute"]<br />
            </p>

            <div class="d-flex gap-2 flex-wrap align-items-center">
                <!-- UI says Worker, backend expects role=Employee -->
                <NavLink class="btn btn-primary btn-lg" href="/register?role=Employee" aria-label="Register as Worker">
                    @L["RegisterAsWorker"]
                </NavLink>
                <NavLink class="btn btn-outline-secondary btn-lg" href="/register?role=Employer" aria-label="Register as Employer">
                    @L["RegisterAsEmployer"]
                </NavLink>
            </div>

            <div class="mt-3">
                <span class="text-muted">@L["AlreadyHavaAnAccount"]</span>
                <NavLink class="ms-1" href="/login">@L["Login"]</NavLink>
            </div>
        </div>
    </section>

    <!-- Value props -->
    <section class="row g-4 mb-5" aria-label="Key benefits">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-2">@L["FastAndSimple"]</h5>
                    <p class="card-text mb-0">
                        @L["CreateAnAcountQuickly"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-2">@L["MadeForEveryone"]</h5>
                    <p class="card-text mb-0">
                        @L["WorkersAndEmployerInOnePlace"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-2">@L["LocalFirst"]</h5>
                    <p class="card-text mb-0">
                        @L["FocusedOnNearbyOpportunities"]
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Dual CTAs -->
    <section class="row g-4" aria-label="Get started cards">
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <span class="badge bg-primary mb-2">@L["ForWorkers"]</span>
                    <h4 class="card-title mb-2">@L["StartApplyingToday"]</h4>
                    <ul class="mb-3 ps-3">
                        <li>@L["CreateAProfile"]</li>
                        <li>@L["BrowseOpeningsAndSaveFavorites"]</li>
                        <li>@L["ApplyWithOneClick"]</li>
                    </ul>
                    <!-- backend still expects Employee -->
                    <NavLink class="btn btn-primary" href="/register?role=Employee" aria-label="Register as Worker">
                        @L["RegisterАsWorker"]
                    </NavLink>
                </div>
                <div class="card-footer bg-white">
                    <small class="text-muted">@L["FreeForAll"]</small>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <span class="badge bg-secondary mb-2">@L["ForEmployers"]</span>
                    <h4 class="card-title mb-2">@L["PostAJobInMinutes"]</h4>
                    <ul class="mb-3 ps-3">
                        <li>@L["PublishRolesWithClearRequirements"]</li>
                        <li>@L["ReceiveAndReviewApplications"]</li>
                        <li>@L["TrackYourPipelineInOnePlace"]</li>
                    </ul>
                    <NavLink class="btn btn-secondary" href="/register?role=Employer" aria-label="Register as Employer">
                        @L["RegisterАsEmployer"]
                    </NavLink>
                </div>
                <div class="card-footer bg-white">
                    <small class="text-muted">@L["CreateYourFirstPostingNow"]</small>
                </div>
            </div>
        </div>
    </section>

</div>
