@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ZaposliMe.Frontend.Resources.Resources> L
@using Microsoft.AspNetCore.Components.Routing

<div class="landing-hero position-relative overflow-hidden py-5 py-md-6 mb-5 rounded-4">
    <div class="container position-relative">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold lh-tight mb-3">@L["FindWorkHireWorker"]</h1>
                <p class="lead text-body-emphasis mb-4">
                    @L["TiredOfScrollingThroughViberGroupsAndAskingAroundJustToFindDailyJob"] @L["ForgetMiddlemenAgenciesAndHiddenFees"] <strong>Šljakomatu</strong>.
                    <br />
                    @L["EmployersSkipNegotiationsSkipSomeoneKnowsSomeonePhaseConnectStraight"]
                </p>
                <div class="d-flex flex-wrap gap-2 align-items-center">
                    <NavLink class="btn btn-primary btn-lg px-4" href="/register?role=Employee" aria-label="@L["RegisterAsEorker"]">
                        <i class="bi bi-hammer me-2"></i> @L["RegisterAsWorker"]
                    </NavLink>
                    <NavLink class="btn btn-secondary btn-lg px-4" href="/register?role=Employer" aria-label="@L["RegisterAsEmployer"]">
                        <i class="bi bi-building-gear me-2"></i> @L["RegisterAsEmployer"]
                    </NavLink>
                    <NavLink class="btn btn-link text-decoration-none" href="/jobs">Pretraži poslove →</NavLink>
                </div>
            </div>

            <!-- Ilustrativna kartica / kratki sažetak benefita -->
            <div class="col-lg-5">
                <div class="card glass shadow-lg border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="icon-circle"><i class="bi bi-stars"></i></div>
                            <div>
                                <h5 class="mb-1">@L["NoMiddlemenNoFees"]</h5>
                                <div class="text-body-secondary small">@L["DirectConnectionWorkerEmployerPerHourOrPerDay"]</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="icon-circle"><i class="bi bi-lightning-charge"></i></div>
                            <div>
                                <h5 class="mb-1">@L["FastAndSimple"]</h5>
                                <div class="text-body-secondary small">@L["SignUpInMinuteApplyWithOneClickGetContactedDirectly"]</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="icon-circle"><i class="bi bi-geo-alt"></i></div>
                            <div>
                                <h5 class="mb-1">@L["LocalFirst"]</h5>
                                <div class="text-body-secondary small">@L["FindJobNearbyOrPostJobInYourArea"]</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- dekorativni elementi -->
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
</div>

<div class="container">
    <!-- Uvod iz dva ugla -->
    <section class="row g-4 mb-5" aria-label="Two perspectives">
        <div class="col-lg-6">
            <div class="p-4 border rounded-4 h-100 shadow-sm">
                <span class="bg-primary-subtle text-primary-emphasis mb-2"><i class="bi bi-person-badge me-1"></i> <strong>@L["ForWorkers"]</strong></span>
                <p class="mb-0 text-body-secondary">
                    @L["NoMoreBeggingCallingAsking"]
                </p>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="p-4 border rounded-4 h-100 shadow-sm">
                <span class="bg-secondary-subtle text-secondary-emphasis mb-2"><i class="bi bi-building me-1"></i> <strong>@L["ForEmployers"]</strong></span>
                <p class="mb-0 text-body-secondary">
                    @L["NeedHelpForThe weekendTheSeasonOrRigntNow"]
                </p>
            </div>
        </div>
    </section>

    <!-- Dvije kolone: koraci -->
    <section class="row g-4 mb-5" aria-label="Steps">
        <!-- Radnik -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="steps-icon me-2"><i class="bi bi-hammer"></i></div>
                        <h4 class="mb-0">@L["ForWorkersHowItWorks"]</h4>
                    </div>
                    <ol class="mb-4 ps-3 text-body-secondary">
                        <li class="mb-2">@L["Register"]</li>
                        <li class="mb-2">@L["Login"]</li>
                        <li class="mb-2">@L["BrowseJobs"]</li>
                        <li class="mb-2">@L["Apply"]</li>
                        <li class="mb-2">@L["TrackApplicationStatus"]</li>
                        <li class="mb-2">@L["ExpectCallFromEmployer"]</li>
                        <li class="mb-0"><em>@L["OptionalOption"]:</em> @L["LeaveReview"]</li>
                    </ol>
                    <div class="d-flex gap-2">
                        <NavLink class="btn btn-primary" href="/register?role=Employee">@L["RegisterAsWorker"]</NavLink>
                        <NavLink class="btn btn-outline-secondary" href="/jobs">@L["BrowseJobs"]</NavLink>
                    </div>
                </div>
            </div>
        </div>

        <!-- Poslodavac -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="steps-icon me-2"><i class="bi bi-person-workspace"></i></div>
                        <h4 class="mb-0">@L["ForEmployersHowItWorks"]</h4>
                    </div>
                    <ol class="mb-4 ps-3 text-body-secondary">
                        <li class="mb-2">@L["Register"]</li>
                        <li class="mb-2">@L["Login"]</li>
                        <li class="mb-2">@L["CreateJobPost"]</li>
                        <li class="mb-2">@L["TrackApplicationsAndManageThem"]</li>
                        <li class="mb-0">@L["OnceYouAcceptAapplicationYouWllSeeTheWokersCntactDetails"]</li>
                    </ol>
                    <div class="d-flex gap-2">
                        <NavLink class="btn btn-outline-primary" href="/register?role=Employer">@L["RegisterAsEmployer"]</NavLink>
                        @* <NavLink class="btn btn-outline-secondary" href="/employers/post-job">Objavi posao</NavLink> *@
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA traka -->
    <section class="cta-band text-center py-4 px-3 rounded-4 mb-5">
        <div class="container">
            <div class="d-flex flex-column flex-md-row align-items-center justify-content-center gap-3">
                <div class="fw-semibold">@L["ReadyNoFeesNoWiting"]</div>
                <div class="d-flex gap-2">
                    <NavLink class="btn btn-primary" href="/register?role=Employee"><i class="bi bi-emoji-sunglasses me-1"></i> @L["BecomeWorker"]</NavLink>
                    <NavLink class="btn btn-outline-light" href="/register?role=Employer"><i class="bi bi-briefcase me-1"></i> @L["BecomeEmployer"]</NavLink>
                </div>
            </div>
        </div>
    </section>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"> 