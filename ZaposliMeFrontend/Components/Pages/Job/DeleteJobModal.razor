@using ZaposliMe.Application.DTOs.Job

@if (Show && Job != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@Job.Title</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="OnClose">Cancel</button>
                    <button class="btn btn-danger" @onclick="() => OnConfirm.InvokeAsync(Job.Id)">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public JobDto? Job { get; set; }
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<Guid> OnConfirm { get; set; }
}
