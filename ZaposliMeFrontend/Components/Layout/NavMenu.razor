@using ZaposliMe.Frontend.Components.Shared
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ZaposliMe.Frontend.Resources.Resources> L
<div class="top-row ps-3 navbar navbar-expand-md navbar-teal">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Šljakomat</a>

        <!-- Prevent double toggle via bubbling -->
        <button title="Navigation menu"
                class="navbar-toggler"
                @onclick="ToggleNavMenu"
                @onclick:stopPropagation="true">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<!-- Sidebar: collapse on mobile, visible on md+ -->
<div class="collapse d-md-block nav-scrollable sidebar-teal @(isOpen ? "show" : null)">
    <nav class="nav flex-column">
        <AuthorizeView Roles="Admin,Employee">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="jobs" @onclick="CloseOnItemClick">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="false"></span> @L["Jobs"]
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Employer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="employer/jobs" @onclick="CloseOnItemClick">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="false"></span> @L["Jobs"]
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Employee">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="employee/applications" @onclick="CloseOnItemClick">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="false"></span> @L["Applications"]
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView Roles="Employer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="employer/applications" @onclick="CloseOnItemClick">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="false"></span> @L["Applications"]
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    // Closed on mobile by default; visible on desktop via d-md-block
    private bool isOpen = false;

    private void ToggleNavMenu() => isOpen = !isOpen;

    private void CloseOnItemClick()
    {
        if (isOpen)
            isOpen = false;
    }
}
