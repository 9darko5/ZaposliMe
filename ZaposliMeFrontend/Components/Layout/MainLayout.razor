@using ZaposliMe.Frontend.Components.Shared
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ZaposliMe.Frontend.Resources.Resources> L
@inherits LayoutComponentBase

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main>

        <!-- Top toolbar -->
        <div class="d-flex justify-content-end align-items-center gap-2 px-3 py-2">

            <!-- Show Logout only when authorized -->
            <AuthorizeView>
                <Authorized>
                    <LanguageSwitcher />
                    <a class="btn btn-outline-danger" href="/logout">@L["Logout"]</a>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
